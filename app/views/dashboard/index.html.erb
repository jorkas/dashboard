<article class="grid_3 widget">
    <header>
        <h2>Visits (30 days)</h2>
    </header>
    <section>
        <p class="big"><%= number_to_human(@visits[:now],:precision => 3) %></p>
        <p class="<%= (@visits[:percent] > 0) ? "up" : "down" %>"><%= number_to_percentage(@visits[:percent], :precision => 2) %></p>
    </section>
</article>

